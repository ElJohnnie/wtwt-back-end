{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES6"],
      "module": "CommonJS",
      "rootDir": "./src",
      "typeRoots": ["./node_modules/@types", "./src/@types"],
      "resolveJsonModule": true,
      "allowJs": true,
      "outDir": "./dist",
      "removeComments": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": [
      "node_modules",
      "dist",
      "jest.config.ts",
      "tests",
      "coverage",
      "**/*.test.ts",
      "**/*.spec.ts",
      "eslint.config.mjs",
      "jest.setup.ts"
    ]
  }
